<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:src="@drawable/cogniteye"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cogniteye"
            android:textColor="#0d6e6a"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_module"
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:src="@drawable/question"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/txt_madulename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appropriate Module"
        android:textColor="#0d6e6a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txt_moduletask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Needs To Be Done?"
        android:textColor="#0d6e6a"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_recievedcommand"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recieved Text From User"
        android:textColor="#0d6e6a"
        android:textSize="16dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:id="@+id/recognize_mic"
        android:text="START MICROPHONE"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"/>

    <ToggleButton
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:text="Register"
        android:textSize="18dp"
        android:id="@+id/pause"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:textOff="@string/pause"
        android:textOn="@string/continueRecognition"
        />
